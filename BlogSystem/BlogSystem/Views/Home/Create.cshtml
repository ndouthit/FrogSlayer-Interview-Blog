@model BlogSystem.Models.Post

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Create New Blog Post</legend>

        <div class="editor-label">
            @Html.LabelFor(p => p.Title)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(p => p.Title, new { style = "width: 750px;" })
            @Html.ValidationMessageFor(p => p.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(p => p.Content)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(p => p.Content, new { cols = "115", rows = "30", style="resize: none;" } )
            @Html.ValidationMessageFor(p => p.Content)
        </div>

        <p>
            <input type="submit" value="Publish Blog Post" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Return to Index", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
