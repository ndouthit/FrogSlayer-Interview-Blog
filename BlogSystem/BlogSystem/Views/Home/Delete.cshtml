@model BlogSystem.Models.Post

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Post to be deleted:</legend>

    <div class="display-label">
         @Html.DisplayNameFor(p => p.Title)
    </div>
    <div class="display-field">
        @Html.DisplayFor(p => p.Title)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(p => p.Content)
    </div>
    <div class="display-field">
        @Html.DisplayFor(p => p.Content)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(p => p.Username)
    </div>
    <div class="display-field">
        @Html.DisplayFor(p => p.Username)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(p => p.Timestamp)
    </div>
    <div class="display-field">
        @Html.DisplayFor(p => p.Timestamp)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Return to Index", "Index")
    </p>
}
